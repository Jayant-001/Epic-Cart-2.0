generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL_DEV")
}

model Category {
  id       String    @id @default(uuid())
  name     String?   @db.VarChar(255)
  products Product[]
}

model Product {
  id          String    @id @default(uuid())
  name        String?   @db.VarChar(255)
  desc        String?   @db.VarChar(255)
  store_id    String?
  user_id     String?
  quantity    Int?      @default(1)
  price       Int?
  image       String?   @db.VarChar(255)
  address     String?   @db.VarChar(255)
  category_id String?
  store       Store?    @relation(fields: [store_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "product_ibfk_1")
  user        User?     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "product_ibfk_2")
  category    Category? @relation(fields: [category_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "product_ibfk_3")

  @@index([category_id], map: "category_id")
  @@index([store_id], map: "store_id")
  @@index([user_id], map: "user_id")
}

model Store {
  id       String    @id @default(uuid())
  name     String?   @db.VarChar(255)
  desc     String?   @db.VarChar(255)
  user_id  String?
  products Product[]
  user     User?     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "store_ibfk_1")

  @@index([user_id], map: "user_id")
}

model User {
  id       String    @id @default(uuid())
  name     String?   @db.VarChar(255)
  email    String?   @unique(map: "email") @db.VarChar(50)
  password String?   @db.VarChar(255)
  products Product[]
  stores   Store[]
}
